@{
        ViewBag.Title = "getAllClientsCharge";
        Layout = "~/Areas/adminPanel/Views/Shared/_adminLayout.cshtml";
 }

<html xmlns="http://www.w3.org/1999/xhtml" ng-app="myApp">


<head>
    <title></title>
    <script src="~/assets/general/js/angular.js"></script>
        <script src="~/assets/admin/js/ang/cTypes.js"></script>

    <style>


        h4 {
            color: #456e82;
        }

        h3 {
            color: #5c4f4f;
        }
    </style>



</head>

<body ng-controller="c_types">

    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <ol class="breadcrumb breadcrumb-2">
                    <li><a><i class="icon-home"></i> القائمه</a></li>
                    <li class="active"><a style="color: #ec407a">تصنيف العملاء</a> </li>
                </ol>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong style="color: #5c4f4f">تصنيف العملاء</strong>
                    </div>

                    <div class="row w3-res-tb" dir="rtl">
                        <div class="col-lg-12" dir="ltr">

                            <table>
                                <tr>

                                    <td style="border:0px">
                                        <input dir="rtl" style="border-radius:0px" type="text" placeholder="اسم النوع" class="form-control" ng-model="name" />
                                    </td>

                                    <td style="border:0px">
                                        <button class="btn btn-info btn-sm" style="border-radius:0px; height:34px" ng-click="add()">اضافه</button>
                                    </td>

                                </tr>

                            </table>


                            <br />
                        </div>

                    </div>

                    <div class="table-responsive">

                        <table class="table table-striped b-t b-light" dir="rtl" style="border: 1px solid #e9e9e9;">
                            <thead>
                                <tr style="background: #ddede0; padding:5px ">
                                    <th><h3 style="padding:5px;"> الكود  </h3></th>
                                    <th><h3 style="padding:5px;"> النوع </h3></th>
                                    <th><h3 style="padding: 5px">تعديل </h3></th>
                                    <th><h3 style="padding: 5px">حذف </h3></th>

                                </tr>
                            </thead>
                            <tbody ng-repeat="t in allTypes">

                                <tr class="tr" id="tbr">
                                    <td>
                                        <h4>
                                            {{t.id}}
                                        </h4>
                                    </td>
                                    <td>
                                        <h4>
                                            {{t.type}}
                                        </h4>
                                    </td>
                                    <td>
                                        <button ng-click="update(t.id,t.type)" class="btn btn-sm btn-success" data-toggle="modal" data-target="#update">
                                            <i class="fa fa-edit fa-lg"></i>
                                        </button>

                                    </td>
                                    <td>
                                        <button ng-click="get_type(t.id)" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#delete">
                                            <i class="fa fa-remove fa-lg"></i>
                                        </button>
                                    </td>

                                </tr>

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </section>
    </section>


    <div id="delete" class="modal fade" role="dialog" style="background-color: rgba(25, 23, 23, 0.49); ">
        <div class="modal-dialog modal-sm" style="top:25%">
            <div class="modal-content">

                <div class="modal-body text-left">
                    <center>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <br />
                        <h4 style="color:crimson"> هل تريد حذف هذا النوع؟</h4>
                    </center>

                </div>
                <div class="modal-footer">
                    <center>
                        <button type="button" class="btn btn-success btn-sm" data-dismiss="modal">الغاء</button>
                        <button type="submit" class="btn btn-danger btn-sm" ng-click="delete()" data-dismiss="modal">حذف</button>
                    </center>
                </div>
            </div>

        </div>
    </div>



    <div id="update" class="modal fade left" role="dialog" style="top: 15%; background-color: transparent !important">
        <div class=" modal-dialog" style="width: 400px; background-color: transparent !important">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="text-center" style="color: #5c4f4f">تعديل تصنيف العملاء </h4>
                </div>
                <div class="modal-body text-left">
                    <center>
                        <div class="modal-body text-left">
                            <br />
                            <center>
                                <table>
                                    <tr>

                                        <td style="border:0px">

                                            <input ng-model="name2" type="text" class="form-control" style="border-radius:0px" dir="rtl" />

                                        </td>
                                        <td style="border:0px">
                                            <h4 style="margin-left:20px">اسم النوع</h4>
                                        </td>

                                    </tr>
                                </table>
                            </center>

                        </div>
                        <div class="modal-footer">
                            <center>
                                <button type="button" class="btn btn-success btn-sm" data-dismiss="modal">الغاء</button>
                                <button type="submit" class="btn btn-danger btn-sm" ng-click="updateDB()" data-dismiss="modal">تعديل</button>
                            </center>
                        </div>
                    </center>
                </div>
            </div>
        </div>
    </div>


    @{Html.RenderPartial("../management/_scriptPartial");}

</body>
</html>