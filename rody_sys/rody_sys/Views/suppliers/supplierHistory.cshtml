
@{
    ViewBag.Title = "supplierHistory";
    Layout = "~/Areas/adminPanel/Views/Shared/_adminLayout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml" ng-app="myApp">

<head>
    <title></title>
    <script src="~/assets/general/js/angular.js"></script>
    @*<script src="~/assets/admin/js/ang/ctr2.js"></script>*@

    <style>
        h4 {
            color: #456e82;
        }

        h3 {
            color: #5c4f4f;
        }
    </style>

</head>

<body ng-controller="suppliers">

    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <ol class="breadcrumb breadcrumb-2">
                    <li><a><i class="icon-home"></i> القائمه</a></li>
                    <li><a> الموردين</a></li>
                    <li class="active"><a style="color: #ec407a">كشف حساب مورد</a> </li>
                </ol>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong style="color: #5c4f4f">كشف حساب مورد</strong>

                    </div>
                    <div class="row w3-res-tb">

                        <div class="col-sm-1 col-lg-offset-2">
                            <div class="form-group">
                                <button class="btn btn-info" data-toggle="modal" data-target="#getSuppliers">بحث</button>
                            </div>
                            <br />
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <input type="text" class="form-control" readonly ng-model="supName" placeholder="اسم المورد" dir="rtl" />
                            </div>
                            <br />
                        </div>



                        <div class="col-lg-3" dir="ltr">
                            <input dir="rtl" style="border-radius:0px" type="text" placeholder="الي تاريخ" class="form-control" ng-model="to" onfocus="this.type='date'" />
                            <br />
                        </div>
                        <div class="col-lg-3" dir="ltr">
                            <input dir="rtl" style="border-radius:0px" type="text" placeholder=" من تاريخ" class="form-control" ng-model="from" onfocus="this.type='date'" />
                            <br />
                        </div>


                    </div>



                    <div class="table-responsive">

                        <table class="table table-striped b-t b-light" dir="rtl">
                            <thead>
                                <tr style="background: #ddede0; padding:5px ">
                                    <th><h5 style="padding:5px;" ng-click="sort('id')">الكود <i class="fa {{icon_id}}"></i></h5></th>
                                    <th><h5 style="padding: 5px" ng-click="sort('name')">التاريخ <i class="fa {{icon_name}}"></i></h5></th>
                                    <th><h5 style="padding: 5px" ng-click="sort('name')">الاسم <i class="fa {{icon_name}}"></i></h5></th>
                                    <th><h5 style="padding: 5px" ng-click="sort('name')">العمليه <i class="fa {{icon_name}}"></i></h5></th>
                                    <th><h5 style="padding: 5px">مدين</h5></th>
                                    <th><h5 style="padding: 5px">دائن</h5></th>
                                    <th><h5 style="padding: 5px">الرصيد</h5></th>

                                </tr>
                            </thead>
                            <tbody ng-repeat="s in supplierHistory | myGenericDateFilter:from:to ">

                                <tr class="tr" id="tbr">
                                    <td>
                                        <h4>
                                            {{s.id}}
                                        </h4>
                                    </td>
                                    <td>
                                        <h4>
                                            {{s.date}}
                                        </h4>
                                    </td>
                                    <td>
                                        <h4>
                                            {{s.name}}
                                        </h4>
                                    </td>

                                    <td>
                                        <h4>
                                            {{s.opType}}
                                        </h4>
                                    </td>
                                    <td style="background:pink">
                                        <h4>
                                            {{s.debtor}}
                                        </h4>
                                    </td>
                                    <td style="background: #7ee095; ">
                                        <h4>
                                            {{s.creditor}}
                                        </h4>
                                    </td>


                                    <td>
                                        <h4>
                                            {{s.charg}}
                                        </h4>
                                    </td>

                                </tr>

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </section>

        <!--main content end-->
    </section>


    <div id="delete" class="modal fade" role="dialog" style="background-color: rgba(25, 23, 23, 0.49); ">
        <div class="modal-dialog modal-sm" style="top:25%">
            <div class="modal-content">

                <div class="modal-body text-left">
                    <center>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <br />
                        <h4 style="color:crimson"> هل تريد حذف هذا المورد؟</h4>
                    </center>

                </div>
                <div class="modal-footer">
                    <center>
                        <button type="button" class="btn btn-success btn-sm" data-dismiss="modal">الغاء</button>
                        <button type="submit" class="btn btn-danger btn-sm" ng-click="delete()" data-dismiss="modal">حذف</button>
                    </center>
                </div>
            </div>

        </div>
    </div>

    <div id="add" class="modal fade left" role="dialog" style="top: 15%; background-color: transparent !important">
        <div class=" modal-dialog" style="width: 500px; background-color: transparent !important">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="text-center" style="color: #5c4f4f">اضافه مورد</h4>
                </div>
                <div class="modal-body text-left">
                    <center>
                        <br />
                        <table class="">
                            <tr style="">

                                <td style=" border: 0px; width:250px">

                                    <input ng-model="name" type="text" class="form-control" style="border-radius:0px" dir="rtl" />

                                </td>
