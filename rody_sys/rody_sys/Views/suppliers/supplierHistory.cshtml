                            <tr>

                                <td style=" border: 0px">

                                    <input ng-model="phone32" type="text" class="form-control" style="border-radius:0px" dir="rtl" />

                                </td>
                                <td style=" border: 0px">
                                    <h4 style="margin-left: 20px">تليفون</h4>
                                </td>

                            </tr>

                            <tr>

                                <td style=" border: 0px">

                                    <input ng-model="fax2" type="text" class="form-control" style="border-radius:0px" dir="rtl" />

